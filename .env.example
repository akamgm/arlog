ARLOG_ARLO_EMAIL=your-email@example.com
ARLOG_ARLO_PASSWORD=your-arlo-password

# Poll interval in seconds (default: 300 = 5 minutes)
# ARLOG_POLL_INTERVAL=300

# SQLite database path (default: ./arlog.db)
# ARLOG_DB_PATH=./arlog.db

# Run browser headless (default: true)
# Set to false for first run to complete 2FA
# ARLOG_HEADLESS=true

# Browser state directory for session persistence (default: ~/.arlog/browser_state/)
# ARLOG_BROWSER_STATE_DIR=~/.arlog/browser_state/

# ntfy.sh topic for push notifications (leave empty to disable)
# ARLOG_NTFY_TOPIC=your-secret-topic-id
